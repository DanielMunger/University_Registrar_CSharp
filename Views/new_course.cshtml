<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Course</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="container">
      <form action="/course/new" method="post">
        <label for="course-name">Course Name:</label>
        <input type="text" name="course-name" id="course-name">
        <label for="course-number">Course Number:</label>
        <input type="text" name="course-number" id="course-number">
        <button type="submit" name="button">Create Course</button>
      </form>
      @if(Model!=null)
      {
        <div class="well">
          <h4>The Course Has Been Created</h4>
          <p>Course Name: @Model.GetName()</p>
          <p>Course Number: @Model.GetCourseNumber()</p>
        </div>

      }
    </div>
      <div class="container">
        <h5><a href="/courses">View All Courses</a></h5>
        <h5><a href="/students">View All Students</a></h5>
      </div>
  </body>
</html>
