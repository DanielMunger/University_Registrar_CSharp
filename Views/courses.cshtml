<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Courses</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="container">
      @if(Model != null)
      {
        <ul>
        @foreach(var course in Model)
        {
          <li><a href="/course/@course.GetId()">@course.GetName(), @course.GetCourseNumber()</a>| <a href="/course/delete/@course.GetId()">Delete this Course</a></li>

        }
      </ul>
      }
      <a href="/course/new">Add a new Course</a>
    </div>
  </body>
</html>
