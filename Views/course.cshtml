<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Courses</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="container">
      @foreach(var student in Model["students-in-course"])
      {
        <li>student.GetName()</li>
      }
      <h4>Add a student to this course:</h4>
      <form action='/course/add_student' method='post'>
        <input id='course-id' name='course-id' type='hidden' value='@Model["current-course"].GetId()'>
        <label for='student-id'>Select a student</label>
        <select id='student-id' name='student-id' type='text'>
          @foreach (var student in @Model["all-students"])
          {
            <option value='@student.GetId()'>@student.GetName()</option>
          }
        </select>
        <button type='submit'>Add</button>
      </form>
      <p><a href="/">Return to Main Page</a></p>
    </div>
  </body>
</html>
