<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Courses</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="container">
      @if(Model["courses-enrolled"]!=null)
      {
        @foreach(var course in Model["courses-enrolled"])
        {
          <ul>
            <li><a href="/course/@course.GetId()">@course.GetName()</a></li>
          </ul>
        }
      }
      <h4>Add a course for this student:</h4>
      <form action='/student/add_course' method='post'>
        <input id='student-id' name='student-id' type='hidden' value='@Model["current-student"].GetId()'>
        <label for='course-id'>Select a course</label>
        <select id='course-id' name='course-id' type='text'>
          @foreach (var course in @Model["all-courses"])
          {
            <option value='@course.GetId()'>@course.GetName()</option>
          }
        </select>
        <button type='submit'>Add</button>
      </form>
      
      <p><a href="/">Return to Main Page</a></p>
    </div>
  </body>
</html>
